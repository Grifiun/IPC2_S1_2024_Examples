<body> 
    <h2>Este envia al NODE</h2>
    <form action='http://localhost:3001/recibirNombre' method='GET'>
        <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="name" name="name" value="jose">
            </div>
        </div>
        <button type="submit" class="btn btn-outline-primary">Calcular edad y genero</button>
    </form>    

    <h2>Este envia al FLASK</h2>
